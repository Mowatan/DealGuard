# Production Environment Variables for DealGuard Backend
# Copy this file to .env.production and fill in your production values

# Database - Will be provided by Railway
DATABASE_URL="postgresql://user:password@host:5432/dealguard_prod"

# Redis - Production instance
REDIS_URL="redis://your-redis-host:6379"

# MinIO / S3 - Production storage
MINIO_ENDPOINT="your-s3-endpoint.com"
MINIO_PORT=443
MINIO_USE_SSL=true
MINIO_ACCESS_KEY="your-production-access-key"
MINIO_SECRET_KEY="your-production-secret-key"
MINIO_BUCKET_DOCUMENTS="dealguard-documents-prod"
MINIO_BUCKET_EVIDENCE="dealguard-evidence-prod"

# Email - Mailgun Production Configuration
SMTP_HOST="smtp.mailgun.org"
SMTP_PORT=587
SMTP_USER="postmaster@mg.dealguard.org"
SMTP_PASSWORD="your-mailgun-smtp-password"
EMAIL_FROM="DealGuard <noreply@dealguard.org>"
INBOUND_EMAIL_DOMAIN="mg.dealguard.org"

# Email Production Mode
EMAIL_TEST_MODE="false"
EMAIL_TEST_RECIPIENT=""

# Webhook for inbound email
INBOUND_EMAIL_WEBHOOK_SECRET="generate-a-secure-webhook-secret"

# JWT Secret - Generate a strong secret
# Use: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET="generate-strong-jwt-secret-minimum-32-characters"

# Clerk Authentication - PRODUCTION
CLERK_SECRET_KEY="sk_live_YOUR_LIVE_SECRET_KEY"
CLERK_PUBLISHABLE_KEY="pk_live_YOUR_LIVE_PUBLISHABLE_KEY"

# Blockchain (Production - Mainnet)
# ETHEREUM_RPC_URL="https://mainnet.infura.io/v3/YOUR_INFURA_KEY"
# ETHEREUM_PRIVATE_KEY="your-production-private-key"
# ANCHOR_CONTRACT_ADDRESS="0x..."

# AI (Claude API) - Production key
ANTHROPIC_API_KEY="sk-ant-api03-your-production-key"

# Server Configuration
PORT=4000
NODE_ENV="production"
FRONTEND_URL="https://dealguard.vercel.app"

# CORS - Production domains only
ALLOWED_ORIGINS="https://dealguard.vercel.app,https://www.dealguard.com"

# Rate Limiting (adjust for production)
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL="info"
